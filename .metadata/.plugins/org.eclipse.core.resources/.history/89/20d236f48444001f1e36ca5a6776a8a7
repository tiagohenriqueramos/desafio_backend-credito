package com.creditoservice.config;
import com.github.mongobee.Mongobee;
import com.mongodb.MongoClient;
import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;
import org.springframework.data.mongodb.core.MongoTemplate;

@Configuration
public class MongobeeConfig {

    @Bean
    public Mongobee mongobee(MongoClient mongoClient, MongoTemplate mongoTemplate) {
        Mongobee runner = new Mongobee(mongoClient);
        runner.setDbName("express"); // banco de dados
        runner.setChangeLogsScanPackage("com.yourpackage.changelogs"); // pacote para scan de logs de mudan√ßas
        runner.setMongoTemplate(mongoTemplate);
        return runner;
    }
}
