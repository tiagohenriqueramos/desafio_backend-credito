package com.creditoservice.service;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import org.springframework.web.client.RestTemplate;
import com.creditoservice.dto.ClienteApiResponseDTO;

@Service
public class ClienteApiService {

    @Autowired
    private RestTemplate restTemplate;

   /* public ClienteApiResponseDTO getClienteByCpf(String cpf) {
        String url = "http://cliente:8080/cliente/buscar/cpf/" + cpf; 
        return restTemplate.getForObject(url, ClienteApiResponseDTO.class);
    }*/
    
    public ClienteApiResponseDTO getClienteByCpf(String cpf) {
        // Simulando a obtenção dos dados do cliente
        ClienteApiResponseDTO cliente = new ClienteApiResponseDTO();
        cliente.setCpf(cpf);
        cliente.setNome("Nome do Cliente");
        cliente.setCelular("123456789");
        cliente.setScore(600);  // Definindo um score de exemplo
        cliente.setNegativado(false);

        return cliente;
    }
}
