package com.creditoservice.service;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import org.springframework.web.client.RestTemplate;
import com.creditoservice.dto.ClienteApiResponseDTO;

@Service
public class ClienteApiService {

    @Autowired
    private RestTemplate restTemplate;

    public ClienteApiResponseDTO getClienteByCpf(String cpf) {
        String url = "http://cliente:8080/cliente/buscar/cpf/" + cpf; // Use o nome do servi√ßo Docker
        return restTemplate.getForObject(url, ClienteApiResponseDTO.class);
    }
}
