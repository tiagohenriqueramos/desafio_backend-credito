package com.creditoservice.service;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import org.springframework.web.client.RestTemplate;
import com.creditoservice.dto.ClienteApiResponseDTO;
import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.http.ResponseEntity;

@Service
public class ClienteApiService {

    private static final Logger logger = LoggerFactory.getLogger(ClienteApiService.class);

    @Autowired
    private RestTemplate restTemplate;

    public ClienteApiResponseDTO getClienteByCpf(String cpf) {
        String url = "http://cliente:8080/cliente/buscar/cpf/" + cpf;
        logger.info("Fetching client data from URL: {}", url);
        
        ClienteApiResponseDTO cliente = null;
        try {
            ResponseEntity<String> response = restTemplate.getForEntity(url, String.class);
            logger.info("Raw response from API: {}", response.getBody());
            cliente = restTemplate.getForObject(url, ClienteApiResponseDTO.class);
        } catch (Exception e) {
            logger.error("Error fetching client data from URL: {}", url, e);
        }

        logger.info("Received client data: {}", cliente != null ? cliente.toString() : "null");
        return cliente;
    }
}
