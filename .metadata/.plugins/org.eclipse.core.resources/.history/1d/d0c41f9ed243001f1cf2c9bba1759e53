package com.creditoservice.service;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import org.springframework.web.client.RestTemplate;

import com.creditoservice.dto.ClienteApiResponseDTO;

@Service
public class ClienteApiService  {

    @Autowired
    private RestTemplate restTemplate;

    public String getClienteCpfByCpf(String cpf) {
        String url = "http://cliente:8080/cliente/buscar/" + cpf;
        ClienteApiResponseDTO clienteResponse = restTemplate.getForObject(url, ClienteApiResponseDTO.class);
        return clienteResponse != null ? clienteResponse.getCpf() : null;
    }
}